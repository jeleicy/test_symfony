{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello: Test Jeleicy Figueroa! âœ…</h1>

    <h1>Author </h1>
    <table class="table table-striped table-hover" id="table_loan">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
            <tr>
                    <th scope="col">{{ author.firstName }}</th>
                    <th scope="col">{{ author.lastName }}</th>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h1>Book </h1>
    <table class="table table-striped table-hover" id="table_loan">
        <thead>
            <tr>
                <th scope="col">Author</th>
                <th scope="col">Title</th>
                <th scope="col">Summary</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
            <tr>
                    <th scope="col">{{ author.author }}</th>
                    <th scope="col">{{ author.title }}</th>
                    <th scope="col">{{ author.summary }}</th>
                    <th scope="col">{{ author.price }}</th>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h1>Customer </h1>
    <table class="table table-striped table-hover" id="table_loan">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
            </tr>
        </thead>
        <tbody>
            {% for customer in customers %}
            <tr>
                    <th scope="col">{{ customer.firstName }}</th>
                    <th scope="col">{{ customer.lastName }}</th>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h1>Purchase </h1>
    <table class="table table-striped table-hover" id="table_loan">
        <thead>
            <tr>
                <th scope="col">Customer</th>
                <th scope="col">Book</th>
                <th scope="col">Purchase Date</th>
            </tr>
        </thead>
        <tbody>
            {% for purchase in purchases %}
            <tr>
                    <th scope="col">{{ purchase.customer }}</th>
                    <th scope="col">{{ purchase.book }}</th>
                    <th scope="col">{{ autpurchasehor.purchaseDate }}</th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
